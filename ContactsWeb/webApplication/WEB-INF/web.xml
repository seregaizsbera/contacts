<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app id="WebApp">
	<display-name>ContactsWeb</display-name>
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<display-name>FrontController</display-name>
		<servlet-class>su.sergey.contacts.servlet.FrontController</servlet-class>
		<security-role-ref>
			<role-name>Sergey</role-name>
			<role-link>Sergey</role-link>
		</security-role-ref>
		<security-role-ref>
			<role-name>Everyone</role-name>
			<role-link>Everyone</role-link>
		</security-role-ref>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>FrontController</web-resource-name>
			<description></description>
			<url-pattern>/controller</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description></description>
			<role-name>Sergey</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
	    <auth-method>FORM</auth-method>
	    <realm-name>Contacts</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/error.jsp</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<description>This is me</description>
		<role-name>Sergey</role-name>
	</security-role>
	<security-role>
		<description>Everyone</description>
		<role-name>Everyone</role-name>
	</security-role>
	<ejb-ref id="EjbRef_1">
		<description></description>
		<ejb-ref-name>ejb/TestEJB</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>sergey.contacts.TestHome</home>
		<remote>sergey.contacts.Test</remote>
		<ejb-link>TestEJB</ejb-link>
	</ejb-ref>
</web-app>
